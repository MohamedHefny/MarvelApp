<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/item_details_pager_img"
        android:layout_width="320dp"
        android:layout_height="440dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_broken_image" />

    <TextView
        android:id="@+id/item_details_pager_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textColor="@color/colorTextWight"
        app:layout_constraintEnd_toEndOf="@id/item_details_pager_img"
        app:layout_constraintStart_toStartOf="@id/item_details_pager_img"
        app:layout_constraintTop_toBottomOf="@id/item_details_pager_img"
        tools:text="Anti man and the wasp and another text for test" />
</androidx.constraintlayout.widget.ConstraintLayout>